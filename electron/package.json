{
  "name": "matrix-desktop-client",
  "version": "1.0.0",
  "description": "Matrix聊天客户端桌面版",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "npm run build:frontend && electron .",
    "build:frontend": "cd ../frontend && npm run build",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "clean": "rimraf dist && rimraf build",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "electron",
    "matrix",
    "chat",
    "desktop",
    "client"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.6.4",
    "electron-updater": "^6.1.4",
    "rimraf": "^5.0.1"
  },
  "dependencies": {},
  "build": {
    "appId": "com.matrix.desktop.client",
    "productName": "Matrix聊天客户端",
    "copyright": "Copyright © 2024 Matrix客户端团队",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!node_modules",
      "!npm-debug.log",
      "!test",
      "!tests",
      "!dist",
      "!build",
      {
        "from": "../frontend/dist",
        "to": "frontend/dist",
        "filter": ["**/*"]
      },
      {
        "from": "../backend/target",
        "to": "backend/target",
        "filter": ["*.jar"]
      },
      {
        "from": "jre-runtime",
        "to": "jre-runtime",
        "filter": ["**/*"]
      },
      {
        "from": "postgres",
        "to": "postgres",
        "filter": ["**/*"]
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        },
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ],
      "sign": null
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "asar": false,
    "compression": "store"
  }
}